<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "MedicalProcedure",
  "url": "<%= preparerlintervention_url(@preparer) %>",
  "description": "Préparer l'intervention - <%= @preparer.name %>"
}
</script>

<% case @preparer.name %>
  <% when 'Cataracte' %>
    <%= render "cataracte" %>
  <% when 'Glaucome' %>
    <%= render "glaucomechir" %>
  <% when 'IVT' %>
    <%= render "ivt" %>
  <% when 'Chirurgie réfractive' %>
    <%= render "laser" %>
<% end %>
