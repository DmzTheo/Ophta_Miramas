<%= content_for :meta_title, "#{@pathologie.nom} | #{DEFAULT_META["meta_title"]}" %>

<% case @pathologie.nom %>
  <% when 'Glaucome' %>
    <%= render "glaucomepatho" %>
  <% when 'Diabète' %>
    <%= render "diabete" %>
  <% when 'DMLA' %>
    <%= render "dmla" %>
  <% when 'Décolement de la rétine' %>
    <%= render "decollement" %>
<% end %>
