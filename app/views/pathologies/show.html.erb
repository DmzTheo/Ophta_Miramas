<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "MedicalProcedure",
  "url": "<%= pathology_url(@pathologie) %>",
  "description": "<%= @pathologie.nom %>"
}
</script>

<!-- BreadcrumbList -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
    "itemListElement": [{
      "@type": "ListItem",
      "position": 1,
      "name": "chirurgies",
      "item": "<%= chirurgies_url %>"
    },{
      "@type": "ListItem",
      "position": 2,
      "name": "<%= @pathologie.nom %>",
      "item": "<%= pathology_url(@pathologie) %>"
    }]
}
</script>
<!-- End BreadcrumbList -->

<% case @pathologie.nom %>
  <% when 'Glaucome' %>
    <%= render "glaucomepatho" %>
  <% when 'Diabète' %>
    <%= render "diabete" %>
  <% when 'DMLA' %>
    <%= render "dmla" %>
  <% when 'Décolement de la rétine' %>
    <%= render "decollement" %>
<% end %>
