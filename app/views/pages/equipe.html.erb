<% content_for :meta_title, "Equipe d'#{DEFAULT_META["meta_title"]}" %>
<% content_for :meta_description, "Rencontrez notre équipe : le secretariat, la pré-consultation, les orthoptistes et les médecins : docteur Buzzacchera Nadine et docteur Soare Silvia" %>
<div class='logo'>
  <%= link_to root_path do %>
  <%= image_tag('logo_ok.png', alt: "photo centre", id: "img_logo") %>
  <% end %>
</div>
<div class='nav_back'>
  <div class='navbar_all'>
    <%= link_to((root_path), title: "page d'accueil", class: 'a_img') do %>
    <%= image_tag('view.png', alt: "logo oeil", class: "img_navbar") %>
    <% end %>
    <div class="navbar">
      <%= link_to "CENTRE", centre_path, title: 'le cabinet' %>
      <%= link_to "EQUIPE", equipe_path, title: "présentation de l'équipe", class: 'link_active' %>
      <%= link_to "LUNETTES", lunettes_path, title: 'rdv lunettes' %>
      <%= link_to "PATHOLOGIES", pathologies_path, title: 'présentation des pathologies occulaires' %>
      <%= link_to "CHIRURGIES", chirurgies_path, title: 'présentation des chirurgies' %>
      <div class="dropdown">
        <%= link_to "RENDEZ-VOUS", "#", title: 'site de prise de rendez-vous', target: '_blank', class: "link_rendez_vous color_link dropdown-toggle", rel: 'noopener nofollow', "role" => "button", id: "dropdownMenuLink", "data-toggle" => "dropdown", "aria-haspopup" => "true", "aria-expanded" => "false" %>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <%= link_to "Dr Nadine Buzzacchera", "https://www.doctolib.fr/ophtalmologue/miramas/silvia-soare-miramas", title: 'prendre rendez-vous avec le dr Nadine Buzzacchera', class: 'dropdown-item mx-2' %>
          <%= link_to "Dr Silvia Soare", "https://www.doctolib.fr/ophtalmologue/miramas/silvia-soare-miramas", title: 'prendre rendez-vous avec le dr Silvia Soare', class: 'dropdown-item mx-2' %>
        </div>
      </div>
    </div>
  </div>
</div>
<h1 class="titre_center">L'EQUIPE</h1>
<div class="chest_each_patho pb-mb">
  <h2 class="medecins">Les médecins</h2>
  <div class="personnels_cards">
    <div class="personnel bg-top">
      <%= image_tag('doc_5.png', alt: "nadine", class: "img_nadine") %>
      <p><strong>Docteur Buzzacchera Nadine</strong>. Ancien interne des hopitaux de Marseille, chef de clinique à la faculté, chirurgie cataracte, glaucome, paupières et chirurgie réfractive.</p>
    </div>
    <div class="personnel bg-top">
      <%= image_tag('', alt: "Silvia Soare image à venir", class: "img_brigitte") %>
      <p><strong>Silvia Soare</strong>.</p>
    </div>
  </div>
  <h2 class="accueil mt-4 text-center">Pour vous accueillir:</h2>
  <div class="secretariat_orthoptiste">
    <div class="personnel">
      <h2>Au secrétariat</h2>
      <%= image_tag('inf_1.png', alt: "Fabienne et Christine", class: "img_inf") %>
      <p><strong>Fabienne</strong><br>& <br> <strong>Christine</strong></p>
    </div>
    <div class="personnels_cards">
      <div class="personnel">
        <h2>Pour la pré-consultation</h2>
        <%= image_tag('doc_6.png', alt: "anne", class: "img_anne") %>
        <p><strong>Anne Aurore</strong> <br>Notre orthoptiste vous fera les mesures préliminaires à l'examen de l'ophtalmologiste.</p>
      </div>
      <div class="personnel">
        <%= image_tag('doc_4.png', alt: "eliane", class: "img_eliane") %>
        <p><strong>Eliane</strong> <br>Infirmière qui aide notre orthoptiste et aide opératoire.</p>
      </div>
    </div>
    <div class="personnel">
      <%= image_tag('doc_2.png', alt: "agnes", class: "img_agnes") %>
      <p><strong>Agnès Fabrigoule</strong>. <br>Orthoptiste libérale réalise les visions binoculaires, la rééducation orthoptique et les champs visuels.</p>
    </div>
  </div>
</div>
<div class='bottom_bar d-flex'>
  <%= image_tag('logobleu.png', alt: "logo Ophta Miramas", class: 'img_prez') %>
  <p class="my-2 text-footer">Site internet réalisé par <%= link_to 'DataWeb Univers', 'https://www.data-web-univers.com', title: "Dataweb Univers", class: 'no_decoration text-footer' %></p>
