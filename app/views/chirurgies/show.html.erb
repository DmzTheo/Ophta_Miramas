<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "MedicalProcedure",
  "url": "<%= chirurgy_url(@chirurgie) %>",
  "description": "<%= @chirurgie.nom %>"
}
</script>

<!-- BreadcrumbList -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
    "itemListElement": [{
      "@type": "ListItem",
      "position": 1,
      "name": "chirurgies",
      "item": "<%= chirurgies_url %>"
    },{
      "@type": "ListItem",
      "position": 2,
      "name": "<%= @chirurgie.nom %>",
      "item": "<%= chirurgy_url(@chirurgie) %>"
    }]
  }
</script>
<!-- End BreadcrumbList -->

<% case @chirurgie.nom %>
  <% when 'Cataracte' %>
    <%= render "cataracte" %>
  <% when 'Glaucome' %>
    <%= render "glaucomechir" %>
  <% when 'IVT' %>
    <%= render "ivt" %>
  <% when 'Chirurgie réfractive' %>
    <%= render "laser" %>
  <% when 'Chirurgie des paupières' %>
    <%= render "paupieres" %>
<% end %>
