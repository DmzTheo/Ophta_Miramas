<% content_for :meta_title, "ophtalmologie #{DEFAULT_META["meta_title"]} : les chirurgies" %>
<% content_for :meta_description, "Renseignez vous sur les chirurgies : chirurgie réfractive, cataracte, paupières et IVT..." %>
<!------------------------------------- logo -------------------------------------------->
<div class='logo'>
  <%= link_to root_path do %>
    <%= image_tag('logo_ok.png', alt: "", id: "img_logo") %>
  <% end %>
</div>
<!------------------------------------- logo -------------------------------------------->


<!------------------------------------ navbar ------------------------------------------->
<div class='nav_back'>
  <div class='navbar_all'>
    <%= link_to((root_path), class: 'a_img') do %>
      <%= image_tag('view.png', alt: "", class: "img_navbar") %>
    <% end %>
    <div class="navbar">
      <%= link_to "CENTRE", pages_centre_path %>
      <%= link_to "EQUIPE", pages_equipe_path %>
      <%= link_to "LUNETTES", pages_lunettes_path %>
      <%= link_to "AFFECTIONS", pathologies_path %>
      <%= link_to "CHIRURGIES", chirurgies_path, {style: 'border-bottom: 0.5px solid #363636;'} %>
      <%= link_to "RENDEZ-VOUS", "https://www.votrerdv.fr/ophtalmologiste/miramas/ophta-miramas/prendrerdv.php", style: 'color:#207fde', target: '_blank', class: "link_rendez_vous" %>
    </div>
  </div>
</div>
<!------------------------------------ navbar ------------------------------------------->


<!------------------------------------ titre ------------------------------------------->
<div class="titre_pathologies_telechargement">
  <h1 class="titre_pathologies">CHIRURGIES</h1>
  <%= link_to("TÉLÉCHARGEMENTS", pages_telechargements_path, class:"btn_telechargements") %>
</div>
<!------------------------------------ titre ------------------------------------------->


<div class='chest_patho'>
  <div class="vide"></div>


<!-------------------------------- carte Cataracte --------------------------------------->
  <% @chirurgies.each do |chirurgie| %>
    <% if chirurgie.nom == 'Cataracte' %>
      <%= link_to(chirurgy_path(chirurgie)) do %>
        <div class='link_decollement_retine'>
          <h2>CHIRURGIES DE LA CATARACTE</h2>
          <p class="line_height">Votre vision se trouble, vous êtes éblouis la nuit et vous êtes âgé de plus de 60 ans.
            <br>Peut-être êtes-vous atteint d'une cataracte ?
          <br>Vous souhaitez connaître les modalités de prise en charge (avant, pendant et après l'intervention).</p>
          <p class="plus_patho">En savoir plus</p>
        </div>
      <% end %>
    <% end %>
  <% end %>
<!-------------------------------- carte Cataracte --------------------------------------->


<!---------------------------- carte Chirurgie réfractive ----------------------------------->
  <% @chirurgies.each do |chirurgie| %>
    <% if chirurgie.nom == 'Chirurgie réfractive' %>
      <%= link_to(chirurgy_path(chirurgie)) do %>
        <div class='link_diabete'>
          <h2>CHIRURGIE REFRACTIVE</h2>
          <p class="line_height">Vous souhaitez ne plus porter de lunettes ou de lentilles.
            <br>Vous êtes myope, hypermétrope, astigmate ou même presbyte.
            <br>Vous pouvez certainement bénéficier d'un traitement.
          </p>
          <p class="plus_patho">En savoir plus</p>
        </div>
      <% end %>
    <% end %>
  <% end %>
<!---------------------------- carte Chirurgie réfractive ----------------------------------->


<!------------------------ carte Chirurgie des paupières ------------------------------->
  <% @chirurgies.each do |chirurgie| %>
    <% if chirurgie.nom == 'Chirurgie des paupières' %>
      <%= link_to(chirurgy_path(chirurgie)) do %>
        <div class='link_glaucome'>
            <h2>CHIRURGIES DE LA PAUPIÈRE</h2>
            <p class="line_height">Rides, poches, regard triste, sévère ou fatigué ? Améliorer votre image et votre bien être, avec un résultat naturel ?
            <br>Les injections de toxine botulique (botox) ou d'acide hyaluronique sont des solutions efficaces et simples</p>
            <p class="plus_patho">En savoir plus</p>
        </div>
      <% end %>
    <% end %>
  <% end %>
<!------------------------ carte Chirurgie des paupières ------------------------------->


<!---------------------------------- carte IVT ----------------------------------------->
  <% @chirurgies.each do |chirurgie| %>
    <% if chirurgie.nom == 'IVT' %>
      <%= link_to(chirurgy_path(chirurgie)) do %>
        <div class='link_dmla'>
          <h2>INJECTION INTRA VITRÉENNE</h2>
          <p class="line_height">Vous avez une DMLA, une atteinte rétinienne secondaire à votre diabète ou à un problème vasculaire.
            <br>Ces pathologies peuvent bénéficier d'injections.
            <br>Vous souhaitez connaître les modalités de prise en charge (avant, pendant et après l'intervention).
          </p>
          <p class="plus_patho">En savoir plus</p>
        </div>
      <% end %>
    <% end %>
  <% end %>
<!---------------------------------- carte IVT ----------------------------------------->
  <%= link_to("TÉLÉCHARGEMENTS", pages_telechargements_path, class:"btn_rdv") %>
</div>

<!----------------------------------- bottom bar ------------------------------------------>
<div class='bottom_bar'>
  <%= image_tag('logo_ok.png', alt: "", style: "width: 60px") %>
</div>
<!----------------------------------- bottom bar ------------------------------------------>
