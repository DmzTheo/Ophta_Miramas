<script type="application/ld+json">
<% @chirurgies.each do |chirurgie| %>
  <% if @consigne.chirurgie_id == chirurgie.id %>
    {
      "@context": "http://schema.org",
      "@type": "MedicalProcedure",
      "url": "<%= consignepostoperatoire_url(@consigne) %>",
      "description": "Consignes post-opératoires - <%= chirurgie.nom %>"
    }
  <% end %>
<% end %>
</script>

<!-- BreadcrumbList -->
<script type="application/ld+json">
<% @chirurgies.each do |chirurgie| %>
  <% if @consigne.chirurgie_id == chirurgie.id %>
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
        "itemListElement": [{
          "@type": "ListItem",
          "position": 1,
          "name": "chirurgies",
          "item": "<%= chirurgies_url %>"
        },{
          "@type": "ListItem",
          "position": 2,
          "name": "<%= chirurgie.nom %>",
          "item": "<%= chirurgy_url(chirurgie) %>"
        },{
          "@type": "ListItem",
          "position": 3,
          "name": "Consignes post-opératoires",
          "item": "<%= consignepostoperatoire_url(@consigne) %>"
        }]
    }
  <% end %>
<% end %>
</script>
<!-- End BreadcrumbList -->
<% @chirurgies.each do |chirurgie| %>
  <% if @consigne.chirurgie_id == chirurgie.id %>
    <% case chirurgie.nom %>
      <% when 'Cataracte' %>
        <%= render "cataracte" %>
      <% when 'Glaucome' %>
        <%= render "glaucomechir" %>
      <% when 'IVT' %>
        <%= render "ivt" %>
      <% when 'Chirurgie réfractive' %>
        <%= render "laser" %>
    <% end %>
  <% end %>
<% end %>
